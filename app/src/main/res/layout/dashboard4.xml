<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/nature_gradient_background"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nature's Gift"
        android:textStyle="bold"
        android:textColor="#E8F5E8"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp" />

    <FrameLayout
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginBottom="40dp">

        <!-- Floating Leaves -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/floating_leaf"
            android:alpha="0.8" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/floating_leaf"
            android:alpha="0.7" />

        <!-- Staff -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/nature_staff"
            android:scaleType="fitCenter" />

        <!-- Green Aura -->
        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/nature_aura_effect"
            android:alpha="0.6" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MYTHIC"
        android:textColor="#4CAF50"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.2"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Druid's Ancient Staff"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginBottom="120dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Embrace Power"
        android:textColor="#C8E6C9"
        android:textSize="17sp"
        android:fontFamily="serif"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/claim_button_nature"
        android:padding="18dp"
        android:layout_marginBottom="40dp" />

</LinearLayout>